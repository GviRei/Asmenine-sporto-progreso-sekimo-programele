            android:label="@string/title_activity_advanced_vo2_max"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.gvidas.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.gvidas.activities.Profile.ProfileActivity"
