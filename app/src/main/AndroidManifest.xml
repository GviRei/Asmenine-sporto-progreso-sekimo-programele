            android:name="com.example.gvidas.activities.Workout.WorkoutActivity"
            android:label="@string/title_activity_workout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.gvidas.activities.Workout.FeelingsActivity"
            android:label="@string/title_activity_feelings"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.gvidas.activities.Workout.ShowDataActivity"
            android:label="@string/title_activity_show_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.gvidas.activities.Progress.CheckProgressActivity"
