<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gvidas.activities.Progress.OneRMActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_one_rm" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/RM1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="MAX"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/WGH1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/RM1"
            android:inputType="number" />

        <TextView
            android:id="@+id/RM2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/RM1"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="2 reps"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/WGH2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/RM1"
            android:layout_toRightOf="@id/RM2"
            android:inputType="number" />

        <TextView
            android:id="@+id/RM3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/RM2"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="3 reps"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/WGH3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/RM2"
            android:layout_toRightOf="@id/RM3"
            android:inputType="number" />

        <TextView
            android:id="@+id/RM4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/RM3"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="4 reps"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/WGH4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/RM3"
            android:layout_toRightOf="@id/RM4"
            android:inputType="number" />

        <TextView
            android:id="@+id/RM5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/RM4"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="5 reps"
            android:textAlignment="center"
            android:textColor="@color/fontColor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/WGH5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RM4"

            android:layout_toRightOf="@id/RM5"
            android:inputType="number" />

        <Button
            android:id="@+id/countRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WGH5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonstyle"
            android:text="Calculate"
            android:textSize="12sp"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/WGH5"
            android:layout_alignParentLeft="true"
            android:background="@drawable/buttonstyle"
            android:text="Reset"
            android:textSize="12sp"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
